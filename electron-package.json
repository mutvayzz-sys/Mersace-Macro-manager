{
  "name": "mersaces-macro-manager",
  "version": "1.1.3",
  "description": "Advanced gaming macro application with customizable keybinds and dynamic macro management",
  "author": "Mersace",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "publish": "npm run build && electron-builder --publish=always",
    "release": "npm run build && electron-builder --publish=onTagOrDraft"
  },
  "build": {
    "appId": "com.mersace.macroManager",
    "productName": "Mersace's Macro Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "icon.ico",
      "tray-icon.ico",
      "out/**/*",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Mersace",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mersace's Macro Manager",
      "include": "installer.nsh"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "mutvayzz-sys",
      "repo": "Mersace-Macro-manager",
      "private": false,
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0",
    "electron-updater": "^6.1.7",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "robotjs": "^0.6.0",
    "node-global-key-listener": "^0.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mutvayzz-sys/Mersace-Macro-manager.git"
  }
}